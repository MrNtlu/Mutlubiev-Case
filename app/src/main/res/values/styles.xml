<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="itemIconTint">@color/bottom_nav_item</item>
        <item name="itemTextColor">@android:color/black</item>

        <item name="android:spinnerItemStyle">@style/customSpinnerDialog</item>
    </style>

    <style name="BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationView.Inactive</item>
    </style>

    <style name="BottomNavigationView.Inactive">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomNavigationView.Active">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="customSpinnerDialog">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>